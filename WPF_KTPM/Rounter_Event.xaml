<Window x:Class="WPF_KTPM.Rounter_Event"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_KTPM"
        mc:Ignorable="d"
        Title="Rounter_Event" Height="450" Width="800">
    <Grid>
        <Border Width="350" Height="100" BorderThickness="1" Background="AliceBlue">
            <StackPanel Orientation="Horizontal" ButtonBase.Click="StackPanel_Click">
                <Button 
                    x:Name="btnYes"
                    Content="Yes"
                    Width="100"
                    Height="60">
                </Button>
                <Button 
                    x:Name="btnNo"
                    Content="No"
                    Width="100"
                    Height="60"
                    Margin="10">
                </Button>
                <Button 
                    x:Name="btnCancel"
                    Content="Cancel"
                    Width="100"
                    Height="60">
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
